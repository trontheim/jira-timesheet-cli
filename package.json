{
  "name": "jira-timesheet-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate timesheets from Jira worklogs via REST API",
  "type": "module",
  "main": "timesheet.js",
  "bin": {
    "timesheet": "./timesheet.js"
  },
  "scripts": {
    "start": "node timesheet.js",
    "build": "tsc",
    "dev": "node --loader ts-node/esm timesheet.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "bundle": "node esbuild.config.js",
    "build:binaries": "pkg dist/timesheet.bundle.cjs --config pkg.config.json",
    "build:all": "npm run bundle && npm run build:binaries",
    "clean": "rm -rf dist binaries",
    "prebuild:binaries": "npm run bundle"
  },
  "keywords": [
    "jira",
    "timesheet",
    "worklog",
    "cli",
    "rest-api",
    "atlassian"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/spy": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "c8": "^10.1.3",
    "esbuild": "^0.25.5",
    "mock-fs": "^5.2.0",
    "msw": "^2.0.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "scripts": [
      "dist/timesheet.bundle.cjs"
    ],
    "assets": [],
    "targets": [
      "node18-linux-x64",
      "node18-darwin-x64",
      "node18-darwin-arm64",
      "node18-win-x64"
    ],
    "outputPath": "binaries",
    "options": [
      "--compress"
    ]
  }
}
